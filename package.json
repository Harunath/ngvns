{
	"name": "navagrameen-platform",
	"private": true,
	"scripts": {
		"postinstall": "prisma generate  --schema=./packages/db/prisma/schema.prisma",
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types"
	},
	"devDependencies": {
		"prettier": "^3.6.2",
		"turbo": "^2.5.4",
		"typescript": "5.8.3"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.9.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"next-auth": "^4.24.11",
		"react-icons": "^5.5.0"
	}
}
